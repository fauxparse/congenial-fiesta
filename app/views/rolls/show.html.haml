- content_for :title, workshop.name

%header.hero
  .breadcrumbs
    = link_to t('activity.types.workshop').pluralize, workshops_path, class: 'breadcrumbs__link'
  %h1= workshop.name

- rolls.each do |roll|
  %section.roll__session
    %h2= l(roll.starts_at, format: :full)

    .roll__participants
      = render roll.participants
