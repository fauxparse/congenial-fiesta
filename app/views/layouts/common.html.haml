%html{lang: I18n.locale}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    = page_title
    = csrf_meta_tags
    = favicon_link_tag
    = yield :stylesheets
    = yield :scripts
    = svg_sprite_sheet
    = content_for :head
    - if Rails.env.production?
      :javascript
