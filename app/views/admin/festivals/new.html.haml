= form_for festival, url: admin_festivals_path do |form|
  = form.group :year do
    = form.label :year
    = form.number_field :year, min: Time.zone.today.year
    = form.error_messages_for :year
  = form.group :start_date do
    = form.label :start_date
    = form.date_field :start_date
    = form.error_messages_for :start_date
  = form.group :end_date do
    = form.label :end_date
    = form.date_field :end_date
    = form.error_messages_for :end_date

  = form.submit t('.submit')
