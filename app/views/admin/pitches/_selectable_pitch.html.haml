    .pitch__presenter= pitch.info.presenter.name
    .pitch__extra= [*pitch.gender_list.map { |g| t(g, scope: 'pitch.gender') }, *pitch.origin_list.map { |o| t(o, scope: 'pitch.origin') }].join(' â€¢ ')
  .pitch__type= t(pitch.info.activity.type, scope: 'pitch.short_type')
